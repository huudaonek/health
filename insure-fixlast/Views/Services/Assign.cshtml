@model insure_fixlast.Models.AssignPackageViewModel

@{
    ViewData["Title"] = "Assign Packages to Employees";
}

<div class="container">
    <h1>Assign Packages to Employees</h1>

    <form asp-action="Assign" method="post">
        <div class="form-group">
            <label for="employeeId">Select Employee:</label>
            <select id="employeeId" name="employeeId" class="form-control">
                @foreach (var employee in Model.Employees)
                {
                    <option value="@employee.Id">@employee.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="orderDetailIds">Select Packages:</label>
            <select id="orderDetailIds" name="orderDetailIds" class="form-control" multiple>
                @foreach (var detail in Model.OrderDetails)
                {
                    <option value="@detail.Id">@detail.Service.Name - Quantity: @detail.Quantity</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Assign Packages</button>
    </form>
</div>
